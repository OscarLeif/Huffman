        <TextBox x:Name="TextBoxSource" HorizontalAlignment="Left" Height="281" Margin="211,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272"/>
        <TextBox x:Name="TextBoxChar" HorizontalAlignment="Left" Height="281" Margin="783,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164"/>
        <Label x:Name="LabelURL" Content="" Margin="11,344,9,0" VerticalAlignment="Top" Background="#FFF1F1F1"/>
