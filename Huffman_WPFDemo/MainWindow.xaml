        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="281" Margin="11,58,0,0" VerticalAlignment="Top" Width="195" MouseDoubleClick="listBox_MouseDoubleClick"/>
        <Button x:Name="ButtonGuardar" Content="Guardar" HorizontalAlignment="Left" Margin="783,375,0,0" VerticalAlignment="Top" Width="75" Height="24" Click="ButtonGuardar_Click"/>
        <Label Content="Archivos" HorizontalAlignment="Left" Margin="11,28,0,0" VerticalAlignment="Top" Width="195" FontWeight="Bold"/>

    </Grid>
</Window>
